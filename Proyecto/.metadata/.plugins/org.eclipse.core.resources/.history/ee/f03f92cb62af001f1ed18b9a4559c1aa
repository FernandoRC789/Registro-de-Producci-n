}
img{
	width: 350px;
	margin: 10px;
	border-radius: 10px;
}

.formulario {
    padding: 0px 30px;
    display: flex;             /* Uso de Flexbox para organizar los campos */
    flex-direction: column;    /* Apila los elementos verticalmente */
    gap: 15px;                 /* Espacio uniforme entre cada par de elementos */
}

label {
    text-align: left;
    font-size: 14px;           /* Tamaño de fuente legible */
    margin-bottom: 5px;        /* Espacio entre el label y el input */
}

input {
    width: 100%;               /* Hace que el input ocupe todo el ancho disponible */
    padding: 8px;              /* Espaciado dentro del input */
    font-size: 14px;           /* Tamaño de la fuente en el input */
    border: 1px solid #ccc;    /* Borde gris claro */
    border-radius: 4px;        /* Bordes redondeados */
    box-sizing: border-box;    /* Incluye padding y border en el ancho total */
}

button {
    width: 100%;               /* Hace que los botones ocupen todo el ancho */
    padding: 10px;             /* Espaciado dentro de los botones */
    background-color: #4CAF50; /* Color de fondo verde */
    color: white;              /* Texto blanco */
    border: none;
    border-radius: 4px;        /* Bordes redondeados */
    cursor: pointer;           /* Cambio de cursor al pasar por encima */
    font-size: 16px;           /* Tamaño de la fuente */
    margin-top: 10px;          /* Espacio entre los botones */
}

button:hover {
    background-color: #45a049; /* Color más oscuro en hover */
}